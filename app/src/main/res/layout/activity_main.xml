<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        app:rowCount="2">

        <TextView
            android:id="@+id/choice1"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#728FCE"
            android:gravity="center"
            android:onClick="choice"
            android:tag="0"
            android:text="25"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/choice2"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#4E9258"
            android:gravity="center"
            android:onClick="choice"
            android:tag="1"
            android:text="16"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/choice3"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#FFE5B4"
            android:gravity="center"
            android:onClick="choice"
            android:tag="2"
            android:text="37"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/choice4"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#C48189"
            android:gravity="center"
            android:onClick="choice"
            android:tag="3"
            android:text="97"
            android:textColor="@color/black"
            android:textSize="36dp" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/score"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#736AFF"
        android:gravity="center"
        android:text="0/0"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />


    <TextView
        android:id="@+id/timer"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#736AFF"
        android:gravity="center"
        android:text="90s"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".0005"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/startbuttonn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#3B9C9C"
        android:gravity="center"
        android:onClick="startbutton"
        android:text="START !!"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <TextView
        android:id="@+id/correctOrWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Correct !"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.682" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#3BB9FF"
        android:onClick="playAgain"
        android:text="Play Again"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startbuttonn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

</androidx.constraintlayout.widget.ConstraintLayout>